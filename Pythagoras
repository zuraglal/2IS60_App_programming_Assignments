import java.util.*; // provides Scanner description

/**
 * This program compute the value of the hypothenuse of a triangle with a right angle if we know the two sides which 
 * meet at the right angle.
 * @author TIMEA SZABO (0992759)
 * @since 19-04-2016
 */
public class Pythagoras {
    Scanner sc = new Scanner (System.in); // enables console input via Scanner
    int a; // side a
    int b; // side a
    double c; // side c
        
    void computeHypothenuse(){
        System.out.println("Give length of side a");
        a = sc.nextInt(); // inputs side a from console

        System.out.println("Give length of side b");
        b = sc.nextInt(); // inputs side b from console
        
        c = Math.sqrt(a * a + b * b); // calculate side c with Pythagoras
        System.out.println("Side c has length " + c); // output message with the result
    }
    // start-up code
    public static void main(String[] args) {
        new Pythagoras().computeHypothenuse();
    }  
}
